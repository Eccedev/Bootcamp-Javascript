// Una cadena de texto con tu Nombre
const nombre = "Juan";

//Otra cadena de texto con tu Apellido
const apellido = " Rodríguez";

//Una cadena de texto que se llame "estudiante" concatenando tu Nombre y tu Apellido con un espacio entre medias
let estudiante = nombre.concat(apellido);  //"Juan Rodríguez"
// ó 
let estudiante2 = nombre.concat("").concat(apellido); //"Juan Rodríguez"

// Una cadena de texto que se llame "estudianteMayus" que contenga la cadena estudiante pero todo en mayúsculas
let estudianteMayus = estudiante.toUpperCase(); // "JUAN RODRÍGUEZ"

//Una cadena de texto que se llame "estudianteMinus" que contenga la cadena estudiante pero todo en minúsculas
let estudianteMinus = estudiante.toLowerCase()

//Una variable que contenga el número de letras de la cadena "estudiante" contando los espacios
 let estudianteLength = estudiante.length; // 14


//Una variable que contenga la primera letra del Nombre
const inicialNombre = nombre[0]

//Otra variable que contenga la última letra del Apellido
const finalApel = apellido[apellido.length - 1]
//ó
//const finalApel = apellido.substring(apellido.length - 1);

//Una cadena de texto que elimine los espacios de la variable "estudiante"
let estudNoSpac = estudiante.replace(" ","")
console.log(estudNoSpac);

// Una variable booleana que diga si el Nombre está contenido en la variable "estudiante"
let nombreIncluido = estudiante.includes(nombre);
console.log(nombreIncluido)

