 // intercambiar elemtos array
 const numbers = [1, 3, 5, 9, 11, 12, 20];
    let str = "";
    for (let i = 0; i < numbers.length; i++) {
        let number = numbers[i];
        if (number % 3 === 0) {
            str += "fizz";
        }
        if (number % 5 === 0) {
            str += "buzz";
        }
    } 


console.log(str)   // "fizzbuzzfizzfizzbuzz"
